        </Viewbox>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MaxWidth="1200"/>
                <ColumnDefinition MinWidth="400" MaxWidth="400"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Background="Transparent">
                <StackPanel Margin="15" VerticalAlignment="Stretch">
                    <TextBlock Text="Botw Mod Manager"
                            FontSize="55" Foreground="White"
                            FontFamily="{StaticResource Tajawal}"
                            FontWeight="Medium" Cursor="Arrow"/>
                    <TextBlock Text="Recent Mods:" FontSize="25"
                            FontFamily="{StaticResource Tajawal}"
                            FontWeight="Light" Foreground="#7f7f7f"
                            Margin="15, 10" Cursor="Arrow"/>
                </StackPanel>
                <ListBox Margin="20, 160, 15, 20" FontSize="20"
                        FontFamily="{StaticResource Tajawal}"
                        FontWeight="Bold"
                        Foreground="White" BorderThickness="0"
                        Background="Transparent" VerticalAlignment="Top"
                        ScrollViewer.VerticalScrollBarVisibility="Hidden"
                        ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                        ScrollViewer.CanContentScroll="False">
                    <ListBoxItem Style="{DynamicResource ListBoxHome_RecentItems}">
                        <Grid>
                            <TextBlock Text="Arc Ruins"/>
                            <TextBlock Text="11/11/2021" HorizontalAlignment="Right"
                                       Margin="315, 0, 0, 0" FontWeight="Thin"
                                       FontSize="16" Foreground="#afafaf"/>
                        </Grid>
                    </ListBoxItem>
                    <ListBoxItem Style="{DynamicResource ListBoxHome_RecentItems}" Content="Some Mod Title"/>
                    <ListBoxItem Style="{DynamicResource ListBoxHome_RecentItems}" Content="Another Mod"/>
                    <ListBoxItem Style="{DynamicResource ListBoxHome_RecentItems}" Content="Should I add a char limit?"/>
                    <ListBoxItem Style="{DynamicResource ListBoxHome_RecentItems}" Content="Or just a trail out?"/>
                    <ListBoxItem Style="{DynamicResource ListBoxHome_RecentItems}" Content="Like this rather long name.../"/>
                    <ListBoxItem Style="{DynamicResource ListBoxHome_RecentItems}" Content="Yet another mod."/>
                    <ListBoxItem Style="{DynamicResource ListBoxHome_RecentItems}" Content="Link just chillin down here."
                                Margin="5, 5, 5, 30"/>
                </ListBox>
            </Grid>

            <Grid Grid.Column="1" Background="Transparent">
                <StackPanel Margin="0. 180, 40, 50">
                    <Button HorizontalContentAlignment="Left" VerticalContentAlignment="Top">
                        <Grid>
                            <Image Source="../Images/Icon/Icon.png" Width="40"
                                   HorizontalAlignment="Left" VerticalAlignment="Top"
                                   Margin="5, 7, 5, 0"/>
                            <TextBlock Text="New Mod" Foreground="White"
                                       HorizontalAlignment="Left"
                                       FontFamily="{StaticResource Tajawal}"
                                       FontSize="30"
                                       Margin="55, 3, 0, 0"
                                       FontWeight="Bold"/>
                            <TextBlock Text="Creates a new mod with no attributes."
                                       Foreground="White"
                                       HorizontalAlignment="Left"
                                       FontFamily="{StaticResource Tajawal}"
                                       FontSize="16"
                                       Margin="60, 40, 0, 30"
                                       FontWeight="Thin"/>
                        </Grid>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
