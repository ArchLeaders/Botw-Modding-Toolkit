        </Viewbox>
        <Viewbox VerticalAlignment="Top" HorizontalAlignment="Right"
                 MaxWidth="1200">
            <Viewbox.Effect>
                <DropShadowEffect BlurRadius="20"
                                  Color="#6cd6ff"
                                  ShadowDepth="0"/>
            </Viewbox.Effect>
            <Grid>
                <Path xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Name="path10796" StrokeThickness="10" Stroke="#FF006CD6" StrokeMiterLimit="4" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round">
